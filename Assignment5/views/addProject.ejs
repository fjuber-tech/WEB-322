<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Project</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
  <%- include('partials/navbar', { page: '/solutions/addProject' }) %>

  <section class="hero min-h-screen bg-base-200">
    <div class="hero-content flex-col lg:flex-row-reverse">
      <div class="text-center lg:text-left">
        <h1 class="text-5xl font-bold">Add Project</h1>
        <p class="py-6">Use this form to add a new climate project to the database.</p>
      </div>
      <div class="card flex-shrink-0 w-full max-w-xl shadow-2xl bg-base-100">
        <form action="/solutions/addProject" method="POST" class="card-body">
          <div class="form-control">
            <label class="label">Title</label>
            <input type="text" name="title" class="input input-bordered" required />
          </div>

          <div class="form-control">
            <label class="label">Image URL</label>
            <input type="url" name="feature_img_url" class="input input-bordered" required />
          </div>

          <div class="form-control">
            <label class="label">Sector</label>
            <select name="sector_id" class="select select-bordered" required>
              <% sectors.forEach(sector => { %>
                <option value="<%= sector.id %>"><%= sector.sector_name %></option>
              <% }) %>
            </select>
          </div>

          <div class="form-control">
            <label class="label">Short Intro</label>
            <textarea name="intro_short" class="textarea textarea-bordered" required></textarea>
          </div>

          <div class="form-control">
            <label class="label">Short Summary</label>
            <textarea name="summary_short" class="textarea textarea-bordered" required></textarea>
          </div>

          <div class="form-control">
            <label class="label">Impact</label>
            <textarea name="impact" class="textarea textarea-bordered" required></textarea>
          </div>

          <div class="form-control">
            <label class="label">Original Source URL</label>
            <input type="url" name="original_source_url" class="input input-bordered" required />
          </div>

          <div class="form-control mt-6">
            <button type="submit" class="btn btn-primary">Add Project</button>
          </div>
        </form>
      </div>
    </div>
  </section>
</body>
</html>
