<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Projects</title>
  <link href="/css/main.css" rel="stylesheet" />
</head>
<body>
  <%- include("partials/navbar", { page: "/solutions/projects" }) %>

  <div class="max-w-7xl mx-auto px-4 lg:px-10">
    <div class="hero bg-base-200 mb-10">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Projects</h1>
          <p class="py-6">Explore impactful climate change solutions by sector.</p>

          <!-- Sector Filters -->
          <div class="flex flex-wrap gap-2 justify-center">
            <a href="/solutions/projects?sector=Transportation" class="btn btn-outline btn-sm">Transportation</a>
            <a href="/solutions/projects?sector=Industry" class="btn btn-outline btn-sm">Industry</a>
            <a href="/solutions/projects?sector=Electricity" class="btn btn-outline btn-sm">Electricity</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Projects Table -->
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Title</th>
            <th>Sector</th>
            <th>Summary</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(project => { %>
            <tr>
              <td><%= project.title %></td>
              <td>
                <a href="/solutions/projects?sector=<%= project.Sector.sector_name %>" class="btn btn-sm btn-outline">
                  <%= project.Sector.sector_name %>
                </a>
              </td>
              <td><%= project.summary_short %></td>
              <td class="flex flex-wrap gap-2">
                <a href="/solutions/projects/<%= project.id %>" class="btn btn-sm btn-accent">Details</a>

                <% if (session.user) { %>
                  <a href="/solutions/editProject/<%= project.id %>" class="btn btn-sm btn-info">Edit</a>
                  <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-sm btn-error"
                     onclick="return confirm('Are you sure you want to delete this project?');">
                    Delete
                  </a>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
