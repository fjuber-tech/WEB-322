<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Login History</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
  <%- include("partials/navbar", { page: "/userHistory" }) %>

  <div class="hero bg-base-200 py-10 text-center">
    <div class="hero-content flex-col">
      <h1 class="text-5xl font-bold">User History</h1>
      <p class="py-4">Welcome <%= session.user.userName %> (<%= session.user.email %>)</p>
    </div>
  </div>

  <div class="overflow-x-auto max-w-4xl mx-auto px-4 py-6">
    <table class="table table-zebra w-full">
      <thead>
        <tr>
          <th>Login Date/Time</th>
          <th>Client Info</th>
        </tr>
      </thead>
      <tbody>
        <% session.user.loginHistory.forEach(entry => { %>
          <tr>
            <td><%= new Date(entry.dateTime).toLocaleString() %></td>
            <td><%= entry.userAgent %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
